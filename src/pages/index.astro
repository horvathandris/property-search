---
import YourFinancialDetailsCard from "../components/YourFinancialDetailsCard.astro";
import YourBudgetOverviewCard from "../components/YourBudgetOverviewCard.svelte";
import PropertyTrackerCard from "../components/PropertyTrackerCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <header>
        <h1 class="text-3xl font-bold text-center mb-2">
            London Property Budget Calculator
        </h1>
        <p class="text-center mb-8">
            Estimate your total budget, mortgage payments, and other costs.
        </p>
    </header>
    <main>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div>
                <YourFinancialDetailsCard />
            </div>
            <div class="lg:col-span-2">
                <YourBudgetOverviewCard client:load />
            </div>
            <div class="col-span-full">
                <PropertyTrackerCard />
            </div>
        </div>
    </main>
</Layout>
